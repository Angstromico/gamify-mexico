---
import DefaultLayout from "@layouts/DefaultLayout.astro"
import LoginForm from "@components/login"
---
<DefaultLayout image="/login.png" title="Gamify Mexico" description="Login Page de Gamify Mexico">
 <LoginForm
      title="Iniciar sesión"
      passwordLabel="Contraseña"
      rememberMeLabel="Recuérdame"
      forgotPasswordText="¿Olvidaste tu contraseña?"
      forgotPasswordLink="/olvide-mi-contraseña"
      submitButtonText="Iniciar sesión"
      signUpText="¿No tienes cuenta? Regístrate"
      signUpLink="/registrarse"
      register="Regístrate"
      client:load
    />
</DefaultLayout>
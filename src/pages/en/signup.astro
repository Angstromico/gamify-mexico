---
import DefaultLayout from "@layouts/DefaultLayout.astro"
import RegistrationForm from '@components/Signup'
---
<DefaultLayout lang="en" image="/signEn.png" rights="All rights reserved" title="Pagina de Registro de Gamify Mexico" description="Pagina de Registro de Gamify Mexico">
 <RegistrationForm
        title="Sign Up"
        nameLabel="Full Name"
        emailLabel="Email Address"
        passwordLabel="Password"
        confirmPasswordLabel="Confirm Password"
        phoneLabel="Phone Number"
        submitButtonText="Register"
        loginText="Already have an account? Log In"
        loginLink="/login"
        namePlaceholder="Your full name"
        emailPlaceholder="you@example.com"
        passwordPlaceholder="********"
        confirmPasswordPlaceholder="********"
        phonePlaceholder="Your phone number"
        GEO_API={import.meta.env.GEO_API}
        API={import.meta.env.API}
        client:load
      />
</DefaultLayout>